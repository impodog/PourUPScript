{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PourUPScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.pups",
					"match": "\\b(decl|ref|print|set|loc|sco|nothing|incl|comm|null|cst|again|add_path|new)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.class",
					"match": "\\b(int|flo|str)\\b"
				}
			]
		}
	},
	"scopeName": "source.pups"
}