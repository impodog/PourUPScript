{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Puppyscript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numberd"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"name": "keyword.control.puppyscript",
			"match": "\\b(map|func|param|pack|ret|extern|if|elif|if_not|elif_not|else|while|break|conti|true|false|print|inputs|imp|as|puts|array|pair|hashmap|del|pop|#define|#include)\\b"
		},
		"strings": {
			"name": "string.quoted.double.puppyscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.puppyscript",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.puppyscript",
			"match": "\\b(\\d+(\\.\\d+)?)\\b"
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.puppyscript",
					"match": "//.*"
				},
				{
					"name": "comment.line.puppyscript",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.puppy"
}