{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Puppyscript",
	"patterns": [
		{
			"include": "#preprocess"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"preprocess": {
			"name": "keyword.control.puppyscript",
			"match": "#(define|include|set|ifset|ifnset|end)(.*?)\\n"
		},
		"keywords": {
			"name": "keyword.control.puppyscript",
			"match": "\\b(enter|param|pack|ret|ext|if|elif|if_not|elif_not|else|while|break|conti|true|false|print|inputs|imp|as|puts|del|pop|for|in|call)\\b"
		},
		"types": {
			"name": "entity.name.type",
			"match": "\\b(map|func|range|array|pair|hashmap)\\b"
		},
		"strings": {
			"name": "string.quoted.double.puppyscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.puppyscript",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.puppyscript",
			"match": "(\\b\\d+(\\.\\d+)?)\\b"
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.puppyscript",
					"match": "//.*"
				},
				{
					"name": "comment.line.puppyscript",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.puppy"
}